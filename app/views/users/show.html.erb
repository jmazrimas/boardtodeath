<div class="mid-content-box">
  <span class="inline-span"><h1><%= @user.username %>'s Profile Page</h1></span>
    <div class="center-image">
      <%= image_tag @user.avatar, class: 'default_image' %>
    </div>
    <% if current_user.id == @user.id %>
    <%= link_to 'Edit your account', edit_user_path %>
    <% end %>
</div>

<div class="mid-content-box">
  <h3>My Friends </h3>
    <% if current_user == @user %>
    <% elsif !current_user.friends.include?(@user) %>
      <%= form_for [current_user, @friendship] do |f| %>
        <%= f.hidden_field :user_id, :value => current_user.id %>
        <%= f.hidden_field :friend_id, :value => @user.id %>
        <%= f.submit "Request Friend" %>
      <% end %>
    <% else %>
      <%= form_for([current_user, @friendship], method: :delete) do |f| %>
        <%= f.hidden_field :user_id, :value => current_user.id %>
        <%= f.hidden_field :friend_id, :value => @user.id %>
        <%= f.submit "Remove Friend" %>
      <% end %>
    <% end %>
    </span>
</div>

<% if current_user == @user %>
  <%= render "friend_requests" %>
  <%= render "friends" %>
<% end %>


<div class="mid-content-box">
  <h3>Games I added to the Database</h3>

  <%= render @user.games %>
</div>

<div class="mid-content-box">
  <h3>Games I own </h3>

  <%= render @user.owned_games %>
</div>
