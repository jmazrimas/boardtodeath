  <% if own_game? %>
    <%= form_for(:ownership, method: :delete, url: ownership_path(ownership)) do |f| %>
      <%= f.hidden_field :owner_id, :value => current_user.id %>
      <%= f.hidden_field :owned_game_id, :value => owned_game.id %>
      <%= f.submit "Remove from Collection" %>
    <% end %>
  <% else %>
  <%= form_for :ownership, url: ownerships_path do |f| %>
      <%= f.hidden_field :owner_id, :value => current_user.id %>
      <%= f.hidden_field :owned_game_id, :value => owned_game.id %>
      <%= f.submit "Add to Collection" %>
    <% end %>
  <% end %>
